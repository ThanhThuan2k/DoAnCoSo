
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css{
	<link href="~/Admin/css/NotificationModal.css" rel="stylesheet" />
}

<div class="card-box pb-10">
	<div class="h5 pd-20 mb-0 d-flex justify-content-between">
		<span>Danh sách nhân sự</span>
		<button class="btn btn-success create-btn" asp-action="ThemMoi" asp-controller="Admin" asp-area="Admin">Thêm mới</button>
	</div>
	<table class="data-table table nowrap">
		<thead>
			<tr>
				<th>Id</th>
				<th class="table-plus">Avatar</th>
				<th>Tên hiển thị</th>
				<th class="datatable-nosort">Hoạt động lần cuối</th>
				<th class="datatable-nosort">Action</th>
			</tr>
		</thead>
		<tbody class="tbody">
		</tbody>
	</table>
</div>

<div class="notification-modal d-none mt-2">
	Không có dữ liệu
</div>

<!-- Modal -->
<div class="modal fade" id="infomationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="form-group row d-flex justify-content-center">
					<div class="display-image-xoa">

					</div>
				</div>
				<div class="form-group row d-flex justify-content-center">
					<span class="display-name"></span>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
				<button type="button" class="btn btn-primary submit-delete">Xóa</button>
			</div>
		</div>
	</div>
</div>

@*Model authorize*@
<div class="modal fade" id="authorize-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Đăng nhập</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<input type="text" class="form-control" id="username" placeholder="Username" />
				</div>
				<div class="form-group">
					<input type="password" class="form-control" id="password" placeholder="Password" />
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
				<button type="button" class="btn btn-primary">Xác nhận</button>
			</div>
		</div>
	</div>
</div>

@section js{
	<script src="~/Admin/js/Admin/DanhSach.js"></script>
}