
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css{ 
	<link href="~/Admin/css/NotificationModal.css" rel="stylesheet" />
}

<div class="card-box pb-10">
	<div class="h5 pd-20 mb-0 d-flex justify-content-between">
		<span>Danh sách sản phẩm</span>
		<a class="btn btn-success" asp-action="ThemSanPham" asp-controller="SanPham" asp-area="Admin">Thêm mới</a>
	</div>
	<table class="data-table table nowrap">
		<thead>
			<tr>
				<th class="datatable-nosort" style="width: 70px;">STT</th>
				<th class="datatable-nosort" style="width: 130px;">Mã sản phẩm</th>
				<th class="datatable-nosort" style="width: 100px;">Ảnh</th>
				<th class="datatable-nosort">Tên sản phẩm</th>
				<th class="datatable-nosort" style="width: 120px;">Giá gốc</th>
				<th class="datatable-nosort" style="width: 100px;">Actions</th>
			</tr>
		</thead>
		<tbody class="tbody">
		</tbody>
	</table>
</div>

<div class="notification-modal d-none mt-2">
	Không có dữ liệu
</div>

@section js{ 
	<script src="~/Admin/js/SanPham/SanPham.js"></script>
}